<section class="hero-section" style="background-image: url('{{ section.settings.bg_image | asset_url }}');">
    <div class="hero-content">
        <h1>{{ section.settings.slogan }}</h1>
        <p class="sub-text">Empowering Your Space with Solar Innovation</p>
        <div class="cta-buttons">
            <a href="/collections" class="btn btn-primary">Keşfet</a>
            <a href="/products" class="btn btn-secondary">Koleksiyonları İncele</a>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Hero Bölümü",
    "settings": [
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Arka Plan Görseli"
        },
        {
            "type": "text",
            "id": "slogan",
            "label": "Ana Slogan",
            "default": "Future Powered by Nature"
        }
    ],
    "presets": [
        {
            "name": "Hero Bölümü"
        }
    ]
}
{% endschema %}