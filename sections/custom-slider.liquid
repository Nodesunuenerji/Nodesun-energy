{% comment %}
Shopify section for responsive slider with 3 slides: image, heading, description, and button
{% endcomment %}

{% assign slide_images = "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80,https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=800&q=80,https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=800&q=80" | split: "," %}
{% assign slide_headlines = "Aesthetic Living Spaces Powered by the Sun.,Aesthetic Living Spaces Powered by the Sun.,Aesthetic Living Spaces Powered by the Sun." | split: "," %}
{% assign slide_descriptions = "Eco-friendly solar decor for homes, gardens, and off-grid adventures.,Eco-friendly solar decor for homes, gardens, and off-grid adventures.,Eco-friendly solar decor for homes, gardens, and off-grid adventures." | split: "," %}
{% assign slide_buttons = "Light Up with Solar Style,Light Up with Solar Style,Light Up with Solar Style" | split: "," %}
{% assign slide_links = "#,#,#" | split: "," %}

<div class="custom-slider">
  <div class="slider-wrapper">
    {% for i in (0..2) %}
      <div class="slide{% if forloop.first %} active{% endif %}">
        <img src="{{ slide_images[i] }}" alt="Solar Decor" class="slide-image" />
        <div class="slide-content">
          <h2 class="slide-headline">{{ slide_headlines[i] }}</h2>
          <p class="slide-description">{{ slide_descriptions[i] }}</p>
          <a href="{{ slide_links[i] }}" class="slide-btn">{{ slide_buttons[i] }}</a>
        </div>
      </div>
    {% endfor %}
    <button class="slider-arrow prev">&#10094;</button>
    <button class="slider-arrow next">&#10095;</button>
  </div>
</div>

